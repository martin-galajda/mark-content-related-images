{
  "manifest_version": 2,
  "name": "Content related images",
  "description": "Extension for downloading content related images.",
  "version": "1.0.2",
  "author": "Martin Galajda <galajda.mato@gmail.com>",

  "background": {
    "scripts": ["js/background-script.js"],
    "persistent": false
  },

  "permissions": [
    "*://*.idnes.cz/*",
    "*://*.ifortuna.cz/*",
    "*://*.ifortuna.sk/*",

    "*://*.extra.cz/*",
    "*://*.prozeny.blesk.cz/*",
    "*://*.blesk.cz/*",
    "*://*.lifee.cz/*",
    "*://*.kafe.cz/*",
    "*://*.reflex.cz/*",
    "*://*.emefka.sk/*",
    "*://*.receptnajidlo.cz/*",
    "*://*.fashionmagazin.cz/*",
    "*://*.recepty.cz/*",
    "*://*.shop.emefka.sk/*",
    "*://*.televizeseznam.cz/*",
    "*://*.videacesky.cz/*",
    "*://*.jenzeny.cz/*",
    "*://*.vitalia.cz/*",
    "*://*.sme.sk/*",
    "*://*.fotky.sme.sk/*",
    "*://*.extralife.cz/*",
    "*://*.frekvence1.cz/*",
    "*://*.lepsija.cz/*",
    "*://*.fotografovani.cz/*",
    "*://*.sport.cz/*",
    "*://*.modernibyt.cz/*",

    "storage",
    "declarativeContent",
    "downloads",
    "identity",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.idnes.cz/*",
        "*://*.ifortuna.cz/*",
        "*://*.ifortuna.sk/*",
        
        "*://*.extra.cz/*",
        "*://*.prozeny.blesk.cz/*",
        "*://*.blesk.cz/*",
        "*://*.lifee.cz/*",
        "*://*.kafe.cz/*",
        "*://*.reflex.cz/*",
        "*://*.emefka.sk/*",
        "*://*.receptnajidlo.cz/*",
        "*://*.fashionmagazin.cz/*",
        "*://*.recepty.cz/*",
        "*://*.shop.emefka.sk/*",
        "*://*.televizeseznam.cz/*",
        "*://*.videacesky.cz/*",
        "*://*.jenzeny.cz/*",
        "*://*.vitalia.cz/*",
        "*://*.sme.sk/*",
        "*://*.fotky.sme.sk/*",
        "*://*.extralife.cz/*",
        "*://*.frekvence1.cz/*",
        "*://*.lepsija.cz/*",
        "*://*.fotografovani.cz/*",
        "*://*.sport.cz/*",
        "*://*.modernibyt.cz/*"
      ],
      "css": ["styles/styles.css"],
      "js": ["js/content-script.js"]
    }
  ],

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/favicon.png",
      "32": "img/favicon.png",
      "48": "img/favicon.png",
      "128": "img/favicon.png"
    }
  },

  "oauth2": {
    "client_id": "368056414747-1gt7q1j1brkl3ms03da1uq51uu3bbao5.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },

  "key": "-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----",
  "content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; connect-src https://firestore.googleapis.com https://www.googleapis.com https://accounts.google.com https://securetoken.googleapis.com/; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' https://www.google.com https://lh3.googleusercontent.com data:; font-src https://fonts.gstatic.com https://fonts.googleapis.com data:"

}
 